<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> <%= meta.title %> </title>
    <meta name="description" content=" <%= meta.description %> " >
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1> <%= meta.title %> </h1>
    <table>
        <thead>
            <tr>
                <th>
                    Kép
                </th>
                <th>
                    Név
                </th>
                <th>
                    Mennyiség
                </th>
                <th>
                    Ár
                </th>
                <th>
                    Subtotal
                </th>
            </tr>
        </thead>

        <tbody>
            <%  items.forEach( (item) => { %>
                <tr>
                    <td>
                        <span> <img src="<%= item.thumbnail %>" alt="" > </span>
                    </td>
                    <td>
                        <%= item.title %>
                    </td>
                    <td>
                        <input name="quantity" style="width:60px" type="number" min="0" max="99"
                        value="<%= item.quantity %>"/>
                    </td>
                    <td>
                        <%- formattedPrice(item.price) %>
                    </td>
                    <td>
                        <!-- < %- formattedPrice(item.price * item.quantity) %> -->
                        <%- getSubtotal(item.price, item.quantity) %> 
                        <!-- < %- console.log('price:', item.price, 'quantity:', item.quantity) %> -->
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <h3>   <%  items.forEach( (item) => { %>
        <%- getFulltotal(item.price, item.quantity) %> </h3> 
        <% }) %>
</body>
</html>